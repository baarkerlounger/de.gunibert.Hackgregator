{
    "app-id": "de.gunibert.Hackgregator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "hackgregator",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
    	"webkit.json",
        {
            "name": "hackgregator",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=default"
            ],
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/gunibert/hackgregator.git",
                    "tag" : "0.4.0"
                }
            ]
        }
    ]
}
