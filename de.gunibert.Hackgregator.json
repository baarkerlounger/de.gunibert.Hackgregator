{
    "app-id": "de.gunibert.Hackgregator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "hackgregator",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
    	"webkit.json",
        {
            "name": "hackgregator",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=default"
            ],
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://gunibert.de/cloud/index.php/s/xHHy9M78E47iFMX/download/hackgregator-0.4.0.zip",
                    "sha256" : "84c9b0d2d4d0d168d0e86109b2f9fad0e897672038a94484efc545f06886b991",
                    "archive-type" : "zip",
                    "strip-components" : 0
                }
            ]
        }
    ]
}
