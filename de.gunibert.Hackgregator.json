{
    "app-id": "de.gunibert.Hackgregator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "hackgregator",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/hackgregator/cargo"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "hackgregator",
            "buildsystem" : "simple",
            "build-commands" : [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "cargo run --package xtask --bin xtask"
            ],
            "sources": [
                {
                    "type" : "archive",
                    "url": "https://gitlab.com/gunibert/hackgregator/uploads/d793ec9da2c3ab28275bc6fcf759082f/hackgregator-0.5.0.zip",
                    "sha256": "b7cb514516751f5ab1892a14ca58484052027209894b811403f67c177e19eefe",
                    "archive-type" : "zip",
                    "strip-components" : 0
                },
                "generated-sources.json"
            ]
        }
    ]
}
